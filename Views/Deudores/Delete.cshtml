@model ProyectoFinal_Santiago_Giustolisi.Models.Deudor

@{
    ViewData["Title"] = "Delete";
}
<link href="~/css/Estilos.css" rel="stylesheet" />
<h3>¿Está seguro que quiere eliminar este Deudor/a?</h3>

<div class="contenedor-principal-detalles">
    <h1 class="h1-create">Datos del deudor a eliminar 👇 </h1>
    <div class="contenedor-secundario-detalles">
        <div class="c-s-1">
            <p class="p-dato-detalles"> <b>● Nombre del Producto: </b>@Html.DisplayFor(model => model.Nombre)</p>
            <p class="p-dato-detalles"> <b>● Fecha de Venta: </b>@Html.DisplayFor(model => model.fechaVenta)</p>
            <p class="p-dato-detalles"> <b>● Descripción: </b>@Html.DisplayFor(model => model.Descripcion)</p>
            <p class="p-dato-detalles"> 💲 <b>@Html.DisplayFor(model => model.dineroEntregado)</b> : Dinero Entregado </p>
            <p class="p-dato-detalles"> 💲 <b>@Html.DisplayFor(model => model.dineroTotal)</b> : Dinero Total </p>

            @if (Model.dineroResto < 0)
            {
                        <p class="p-dato-detalles" style="color:green;">
                            Saldo a favor del cliente: $@Html.DisplayFor(modelItem => modelItem.dineroResto)
                        </p>
            }
            else
            {
                        <p class="p-dato-detalles" style="color:red;">
                            Deuda del cliente: $@Html.DisplayFor(modelItem => modelItem.dineroResto)
                        </p>
            }
        </div>
    </div>
    <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> 
    </form>

         <a asp-action="Index" style="border-radius: 1.5rem; background-color: yellow; color:black"><b>● Volver a la lista</b></a>
</div>
