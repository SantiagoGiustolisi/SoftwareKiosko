@model ProyectoFinal_Santiago_Giustolisi.Models.Ingreso

@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/Estilos.css" rel="stylesheet" />
<div class="div-volver-create">
    <a class="btn-volver-create" asp-action="Index">Volver</a>
</div>
<div class="contenedor-principal-create">
    <h1 class="h1-create">Editar Ingreso</h1>
    <div class="contenedor-secundario-create">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
           <div style="display: none;">
    <label asp-for="productoId" class="control-label"><b>✔️ Nombre</b></label>
    <select asp-for="productoId" class="form-control" asp-items="ViewBag.Productos"></select>
</div>

            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"><b>✔️  Cantidad</b></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaIngreso" class="control-label"><b>✔️  Fecha de ingreso</b></label>
                <input asp-for="fechaIngreso" class="form-control" />
                <span asp-validation-for="fechaIngreso" class="text-danger"></span>
            </div>
            <div class="contenedor-btn-create">
                <input type="submit" value="Guardar" class="btn-create btn btn-primary" />
    
            </div>
        </form>

    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}