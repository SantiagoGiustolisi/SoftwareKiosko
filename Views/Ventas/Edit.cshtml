@model ProyectoFinal_Santiago_Giustolisi.Models.Venta

@{
    ViewData["Title"] = "Edit";
}
<link href="~/css/Estilos.css" rel="stylesheet" />
<div class="div-volver-create">
    <a class="btn-volver-create" asp-action="Index">Volver</a>
</div>
<div class="contenedor-principal-create">
    <h1 class="h1-create">Editar Venta</h1>
    <div class="contenedor-secundario-create">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div style="display: none;">
                <label asp-for="productoId" class="control-label"><b>✔️  Nombre del Producto</b></label>
                <select asp-for="productoId" class="form-control" asp-items="ViewBag.Producto"></select>
                <span asp-validation-for="productoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"><b>✔️  Cantidad</b></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precioIngreso" class="control-label"><b>✔️  Precio de Ingreso</b></label>
                <input asp-for="precioIngreso" class="form-control" />
                <span asp-validation-for="precioIngreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precioEgreso" class="control-label"><b>✔️  Precio de Egreso</b></label>
                <input asp-for="precioEgreso" class="form-control" />
                <span asp-validation-for="precioEgreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente" class="control-label"><b>✔️  Cliente</b></label>
                <input asp-for="Cliente" class="form-control" />
                <span asp-validation-for="Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaVenta" class="control-label"><b>✔️  Fecha de Venta</b></label>
                <input asp-for="fechaVenta" class="form-control" />
                <span asp-validation-for="fechaVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
