@model IEnumerable<ProyectoFinal_Santiago_Giustolisi.Models.Venta>

@{
    ViewData["Title"] = "Index";
}
<link href="~/css/Estilos.css" rel="stylesheet" />

<h1 style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 3rem;
            font-weight: bold;
            text-align: center;
            color: #2C3E50;
            margin-bottom: 30px;
            text-transform: capitalize;
            letter-spacing: 1px;
            padding: 15px;
            background-color: #ECF0F1;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border: 2px solid #BDC3C7;
            transition: all 0.3s ease;">Gestión de Ventas 💡</h1>

<p>
    <a class="btn-principal" asp-action="Create">Agregar una nueva Venta 👈🏽</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th class="fila-identificadores"><p style="padding:0; margin:0; font-family: 'Chewy', cursive;">Nombre del Producto</p></th>
            <th class="fila-identificadores"><p style="padding:0; margin:0; font-family: 'Chewy', cursive;">Cantidad</p></th>
            <th class="fila-identificadores"><p style="padding:0; margin:0; font-family: 'Chewy', cursive;">Precio de Ingreso</p></th>
            <th class="fila-identificadores"><p style="padding:0; margin:0; font-family: 'Chewy', cursive;">Precio de Egreso</p></th>
            <th class="fila-identificadores"><p style="padding:0; margin:0; font-family: 'Chewy', cursive;">Margen</p></th>
            <th class="fila-identificadores"><p style="padding:0; margin:0; font-family: 'Chewy', cursive;">Cliente</p></th>
            <th class="fila-identificadores"><p style="padding:0; margin:0; font-family: 'Chewy', cursive;">Fecha de Venta</p></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr class="tabla">
                    <td class="fila-tabla">*️⃣ @Html.DisplayFor(modelItem => item.stockProductos.Nombre)</td>
                    <td class="fila-tabla">*️⃣ @Html.DisplayFor(modelItem => item.Cantidad)</td>
                    <td class="fila-tabla">$@Html.DisplayFor(modelItem => item.precioIngreso)</td>
                    <td class="fila-tabla">$@Html.DisplayFor(modelItem => item.precioEgreso)</td>
                    <td class="fila-tabla">$@Html.DisplayFor(modelItem => item.Margen)</td>
                    <td class="fila-tabla">*️⃣ @Html.DisplayFor(modelItem => item.Cliente)</td>
                    <td class="fila-tabla">*️⃣ @Html.DisplayFor(modelItem => item.fechaVenta)</td>
                       <td class="fila-tabla">
        <a class="btn-editar" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
        <a class="btn-detalles" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
        <a class="btn-eliminar" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
        <a class="btn-ticket" asp-action="GenerarTicket" asp-route-id="@item.Id">Generar Ticket</a>
    </td>

                </tr>
        }
        @if (TempData["Success"] != null)
        {
        <div class="alert-success" id="alert-success">
            <strong>✅ ¡Éxito!</strong><br />
            <span>@TempData["Success"]</span>
            <button type="button" class="close-alert" onclick="document.getElementById('alert-success').style.display='none'">&times;</button>
        </div>
        }


    </tbody>
</table>
